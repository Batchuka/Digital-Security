provider "aws" {
  region = "us-east-1"
}

# Security Group para a Rede Corporativa
resource "aws_security_group" "enterprise_sg" {
  name_prefix = "enterprise"
  description = "Security group for enterprise network"
  vpc_id      = "vpc-035de6a04b60456dc"

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
